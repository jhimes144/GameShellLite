<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<GenerateDocumentationFile>true</GenerateDocumentationFile>
		<PackageId>GameShellLite</PackageId>
		<Version>1.0.0</Version>
		<Authors>Jacob Himes</Authors>
		<Copyright>Copyright 2025 Jacob Himes</Copyright>
		<Description>A lightweight, simple, and type-safe command parsing and execution library for .NET</Description>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
		<PackageProjectUrl>https://github.com/jhimes144/GameShellLite</PackageProjectUrl>
		<RepositoryUrl>https://github.com/jhimes144/GameShellLite</RepositoryUrl>
		<PackageReadmeFile>README.md</PackageReadmeFile>
		<PackageTags>command-parser cli console parser command-line fluent-api</PackageTags>
	</PropertyGroup>

	<PropertyGroup>
		<IsTrimmable>false</IsTrimmable>
		<TargetFramework>netstandard2.1</TargetFramework>
		<Nullable>enable</Nullable>
  </PropertyGroup>

	<ItemGroup>
		<None Include="..\README.md" Pack="true" PackagePath="\"/>
	</ItemGroup>

</Project>
